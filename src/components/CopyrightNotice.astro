---
import { Temporal } from "temporal-polyfill";
import { LOCAL_TIMEZONE } from "../consts";

interface Props {
  pubDate: Temporal.Instant;
}

const { pubDate } = Astro.props;

const localPubDate = pubDate.toZonedDateTimeISO(LOCAL_TIMEZONE);
